  .feature-card img { width:60px; margin-bottom:20px; }

  .stats { display:flex; justify-content:center; gap:50px; flex-wrap:wrap; margin-top:50px; }
  .stat { font-size:36px; font-weight:bold; }
  .stat-label { font-size:18px; }

