  .testimonial-slide { opacity:0; transition: opacity 1s ease-in-out; position:absolute; top:0; left:0; width:100%; }
  .testimonial-slide.visible { opacity:1; }
  .testimonial-slide blockquote { font-size:20px; font-style:italic; color:#555; padding:20px; margin:0 auto; max-width:700px; }

  /* Contact section */
